<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.CombatController">
    <top>
        <Label text="Lupta începe!" style="-fx-font-size: 16px; -fx-font-weight: bold;" alignment="CENTER"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="enemyHpLabel" text="HP Inamic: 50"/>
            <Label fx:id="playerHpLabel" text="HP Jucător: 100"/>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button text="Atac" onAction="#handleAttack"/>
            <Button text="Folosește item" onAction="#handleUseItem"/>
        </HBox>
    </bottom>
</BorderPane>
